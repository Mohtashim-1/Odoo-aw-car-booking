<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <!-- Car Booking Quotation Template -->
    <template id="car_booking_quotation_template" name="Car Booking Quotation Template">
        <t t-foreach="docs" t-as="doc">
            <t t-set="company" t-value="doc.company_id" />
            <t t-set="arabic_text" t-value="'عرض السعر'" />
            
            <t t-call="web.html_container">
                <head>
                    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;700;900&amp;display=swap" rel="stylesheet"/>
                    <style>
                        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+Arabic:wght@400;700;900&amp;display=swap');
                        .arabic-text {
                            font-family: 'DroidArabicNaskh', 'Noto Sans Arabic', 'Arial Unicode MS', sans-serif !important;
                            direction: rtl;
                            text-align: center;
                            font-weight: 700;
                        }
                        .page-footer {
                            text-align: center;
                            font-size: 8px;
                            color: black;
                            background: white;
                            padding: 10px 0;
                            margin-top: 20px;
                        }
                        .page-break {
                            page-break-before: always;
                        }
                        body {
                            margin: 0;
                            padding: 0;
                            font-size: 10px;
                            line-height: 1.2;
                        }
                        .compact-table {
                            font-size: 9px;
                        }
                        .compact-table th,
                        .compact-table td {
                            padding: 4px 6px;
                        }
                        .compact-section {
                            margin: 8px 0;
                        }
                        .compact-section h3 {
                            font-size: 12px;
                            margin: 5px 0;
                        }
                        .compact-section ul {
                            margin: 3px 0;
                            padding-left: 15px;
                        }
                        .compact-section li {
                            margin-bottom: 2px;
                            font-size: 9px;
                        }
                    </style>
                </head>
                <main style="margin: 0 !important; padding: 0 !important; border: none !important; background: white !important;">
                    <div style="font-family: 'Ubuntu', sans-serif !important; margin: 0 !important; padding: 15px !important; font-size: 10px; line-height: 1.2; color: black;">
                         
                        <!-- Page Header -->
                        <t t-call="car_booking.car_booking_quotation_header"/>

                        <!-- Main Content -->
                        <div style="margin-bottom: 10px;">
                            <!-- Quotation Information -->
                            <div style="margin-bottom: 15px;">
                                <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                    <div style="width: 60%;">
                                        <div><span style="font-weight: bold; color: black; font-size: 10px;">Quotation Number:</span> <span t-field="doc.name"/></div>
                                        <div><span style="color: black; font-size: 10px;">Date:</span> <span t-field="doc.date_order" t-options='{"widget": "date", "format": "EEEE, MMMM d, yyyy"}'/></div>
                                    </div>
                                    <div style="width: 38%;">
                                        <div><span style="font-weight: bold; color: black; font-size: 10px;">Customer:</span> <span t-field="doc.partner_id.name"/></div>
                                        <div><span style="font-weight: bold; color: black; font-size: 10px;">Address:</span> <span t-field="doc.partner_id.street"/></div>
                                        </div>
                                </div>
                            </div>

                            <!-- Car Booking Services -->
                            <t t-if="doc.order_line">
                                <table class="compact-table" style="font-family: 'Ubuntu', sans-serif !important; width: 100%; border-collapse: collapse; margin: 10px 0; background: white; border: 1px solid black;">
                                    <thead>
                                        <tr>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 5%;">#</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Booking Type</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Service Type</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Duration</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Car Type</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Qty</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Add Charges</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Price</th>
                                            <th style="background-color: #f8f9fa; border: 1px solid black; padding: 4px; text-align: center; font-weight: 900; font-size: 10px; width: 10%;">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="enumerate(doc.order_line, start=1)" t-as="line">
                                            <tr>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><t t-esc="line[0]"/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><t t-esc="line[1].product_id.name"/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><t t-esc="line[1].service_type.name"/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><t t-esc="line[1].duration"/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><t t-esc="line[1].car_type.name"/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><span t-field="line[1].product_uom_qty" t-options='{"widget": "float", "precision": 0}'/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><span t-field="line[1].additional_charges" t-options='{"widget": "float", "precision": 0}'/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><span t-field="line[1].price_unit" t-options='{"widget": "float", "precision": 0}'/></td>
                                                <td style="border: 1px solid black; padding: 4px; text-align: center;"><span t-field="line[1].price_subtotal" t-options='{"widget": "float", "precision": 0}'/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>

                                <!-- Totals -->
                                <div style="font-family: 'Ubuntu', sans-serif !important; margin-top: 10px; width: 100%;">
                                    <table style="width: 100%; border-collapse: collapse;">
                                        <tr>
                                            <!-- QR Code Section -->
                                            <td style="width: 25%; vertical-align: top; padding: 5px;">
                                                <div style="text-align: center;">
                                                    <img t-att-src="'https://api.qrserver.com/v1/create-qr-code/?size=100x100&amp;data=' + doc.name" 
                                                         style="height:100px; width:100px;" 
                                                         alt="QR Code" />
                                                </div>
                                            </td>
                                            
                                            <!-- Amounts Section -->
                                            <td style="width: 75%; vertical-align: top; padding: 5px;">
                                                <table style="width: 100%; border-collapse: collapse;">
                                                    <tr>
                                                        <td style="width: 70%; text-align: right; padding: 4px; font-weight: bold; color: black; font-size: 10px;">Sub Total:</td>
                                                        <td style="width: 30%; text-align: right; padding: 4px; background-color: #f1f3f4; border-radius: 4px;">
                                                            <span t-field="doc.amount_untaxed" t-options='{"widget": "float", "precision": 0}'/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width: 70%; text-align: right; padding: 4px; font-weight: bold; color: black; font-size: 10px;">VAT 15%:</td>
                                                        <td style="width: 30%; text-align: right; padding: 4px; background-color: #f1f3f4; border-radius: 4px;">
                                                            <span t-field="doc.amount_tax" t-options='{"widget": "float", "precision": 0}'/>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td style="width: 70%; text-align: right; padding: 4px; font-weight: bold; color: black; font-size: 14px;">Total Amount:</td>
                                                        <td style="width: 30%; text-align: right; padding: 4px; background-color: #f1f3f4; border-radius: 4px; font-size: 16px; font-weight: bold;">
                                                            <span t-field="doc.amount_total" t-options='{"widget": "float", "precision": 0}'/>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                
                                <!-- Amount in Words Section -->
                                <div style="font-family: 'Ubuntu', sans-serif !important; margin-top: 8px; width: 100%;">
                                    <table style="width: 100%; border-collapse: collapse;">
                                        <tr>
                                            <td style="width: 25%; text-align: center; padding: 6px; font-size: 9px; color: black; font-weight: bold;">
                                                Total Due Amount in Words:
                                            </td>
                                            <td style="width: 75%; text-align: center; padding: 6px; font-size: 9px; color: black; background-color: #f1f3f4; border-radius: 4px;">
                                                <span t-esc="doc.currency_id.amount_to_text(doc.amount_total)"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </t>

                            <!-- Terms and Conditions -->
                            <div class="compact-section">
                                <div style="font-family: 'Ubuntu', sans-serif !important; font-size: 12px; font-weight: bold; margin: 8px 0 5px 0; color: black; padding-bottom: 3px; text-decoration: underline;">Terms and Conditions</div>
                                <div style="font-family: 'Ubuntu', sans-serif !important; margin-bottom: 8px;">
                                    <ul style="font-family: 'Ubuntu', sans-serif !important; margin: 3px 0; padding-left: 15px;">
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">All the prices mentioned above are without VAT</li>
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">Above prices are applicable for one-way trips only. Same prices are implied vice versa.</li>
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">The charges only include the car, driver, and fuel. Any additional services required must be requested in advance.</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Booking Amendments -->
                            <div class="compact-section">
                                <div style="font-family: 'Ubuntu', sans-serif !important; font-size: 12px; font-weight: bold; margin: 8px 0 5px 0; color: black; padding-bottom: 3px; text-decoration: underline;">Booking Amendments</div>
                                <div style="font-family: 'Ubuntu', sans-serif !important; margin-bottom: 8px;">
                                    <ul style="font-family: 'Ubuntu', sans-serif !important; margin: 3px 0; padding-left: 15px;">
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">Changes to pick up times are requested to be made with a minimum of 2 hours' notice</li>
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">Any amendments to your booking after confirmation can only be accepted subject to availability.</li>
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">DS Rent will attempt to accommodate the change. If DS Rent cannot reallocate that booking, then DS Rent reserves the right to refuse and cancel the amended booking.</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Termination of reservation -->
                            <div class="compact-section">
                                <div style="font-family: 'Ubuntu', sans-serif !important; font-size: 12px; font-weight: bold; margin: 8px 0 5px 0; color: #2c3e50; padding-bottom: 3px; text-decoration: underline;">Termination of Reservation</div>
                                <div style="font-family: 'Ubuntu', sans-serif !important; margin-bottom: 8px;">
                                    <ul style="font-family: 'Ubuntu', sans-serif !important; margin: 3px 0; padding-left: 15px;">
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">DS Rent reserves the right to immediately cancel any reservation without refund if the Chauffeur feels that the passenger is placing the Chauffeur, passengers, or limousine in danger.</li>
                                        <li style="font-family: 'Ubuntu', sans-serif !important; font-size: 9px; margin-bottom: 2px;">If the passenger is in the possession of any illegal material and/or substance, the service will be cancelled without refund. This is without exception.</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Features -->
                            <div class="compact-section">
                                <div style="font-family: Arial, sans-serif !important; font-size: 12px; font-weight: bold; margin: 8px 0 5px 0; color: #2c3e50; padding-bottom: 3px; text-decoration: underline;">Features</div>
                                <div style="font-family: Arial, sans-serif !important; margin-bottom: 8px;">
                                    <ul style="font-family: Arial, sans-serif !important; margin: 3px 0; padding-left: 15px;">
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">All vehicles are of the latest models</li>
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">All vehicles are equipped with GPS for necessary tracing.</li>
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">100% Safety record.</li>
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">Drivers are complied with Dress code.</li>
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">All Vehicles are having Refreshments like Water Bottles, Juices, Facial Tissues and sanitizers.</li>
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">We also provide a distinguished service according to the guest's request, such as chocolates, flowers, gifts etc. with extra Charges</li>
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">In case of breakdowns or emergencies a standby vehicle will be available as replacement to handle the situation with the utmost care.</li>
                                        <li style="font-family: Arial, sans-serif !important; font-size: 9px; margin-bottom: 2px;">24/7 Roadside Assistance.</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                
                <!-- Page Footer -->
                <t t-call="car_booking.car_booking_quotation_footer"/>
            </t>
        </t>
    </template>

    <!-- Page Header Template -->
    <template id="car_booking_quotation_header" name="Car Booking Quotation Header">
        <div style="text-align: center; margin: 0 0 15px 0; padding-bottom: 10px;">
            <t t-if="company and company.image_field_1">
                <img t-att-src="image_data_uri(company.image_field_1)" alt="Company Logo" style="width: 80%; height: auto; margin-bottom: 8px;"/>
            </t>
            <div style="font-family: 'Segoe UI', 'Arial Unicode MS', 'Tahoma', sans-serif !important; font-size: 20px; font-weight: 900; margin: 5px 0; color: black; text-shadow: 1px 1px 2px rgba(0,0,0,0.3); text-align: center; direction: ltr; unicode-bidi: embed;">
                <div style="margin-bottom: 3px;">Quotation</div>
            </div>
        </div>
    </template>

    <!-- Page Footer Template -->
    <template id="car_booking_quotation_footer" name="Car Booking Quotation Footer">
        <div class="page-footer">
            <t t-if="company and company.image_field_2">
                <img t-att-src="image_data_uri(company.image_field_2)" alt="Company Footer" style="max-width: 100%; max-height: 40px; margin-bottom: 5px;" />
            </t>
            <p style="margin: 0; font-size: 8px;">For Enquiries please call 800 301 3000 - (966) 596 430 986<br/>DS Rent-Price Quotation</p>
        </div>
    </template>

    <!-- Report Action for Car Booking Quotation -->
    <record id="action_report_car_booking_quotation" model="ir.actions.report">
        <field name="name">Car Booking Quotation</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">car_booking.car_booking_quotation_template</field>
        <field name="report_file">car_booking.car_booking_quotation_template</field>
        <field name="print_report_name">'Car Booking Quotation - %s' % (object.name)</field>
        <field name="paperformat_id" ref="paperformat_car_booking"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Paper Format -->
    <record id="paperformat_car_booking" model="report.paperformat">
        <field name="name">Car Booking Quotation</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="page_width">0</field>
        <field name="page_height">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

</data>
</odoo> 