<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Account Move Form View to Add Car Booking Fields to Invoice Lines -->
        <record id="view_account_move_form_inherit_car_booking" model="ir.ui.view">
            <field name="name">account.move.form.inherit.car.booking</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <!-- Add button to header -->
                <xpath expr="//header" position="inside">
                    <button name="action_recalculate_totals" 
                            string="Recalculate Totals" 
                            type="object" 
                            class="btn-primary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_force_update_line_subtotals" 
                            string="Update Line Subtotals" 
                            type="object" 
                            class="btn-secondary"
                            attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                </xpath>
                
                <!-- Add car booking fields to invoice lines -->
                <xpath expr="//field[@name='invoice_line_ids']//list//field[@name='name']" position="after">
                    <field name="car_booking_line_id"/>
                    <field name="service_type"/>
                    <field name="car_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="duration"/>
                    <field name="additional_charges"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Account Move Line Tree View to Add Car Booking Fields -->
        <record id="view_account_move_line_tree_inherit_car_booking" model="ir.ui.view">
            <field name="name">account.move.line.tree.inherit.car.booking</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="car_booking_line_id" optional="show"/>
                    <field name="service_type" optional="show"/>
                    <field name="car_type" optional="show"/>
                    <field name="date_start" optional="show"/>
                    <field name="date_end" optional="show"/>
                    <field name="duration" optional="show"/>
                    <field name="additional_charges" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Account Move Line Form View to Add Car Booking Fields -->
        <record id="view_account_move_line_form_inherit_car_booking" model="ir.ui.view">
            <field name="name">account.move.line.form.inherit.car.booking</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="car_booking_line_id"/>
                    <field name="service_type"/>
                    <field name="car_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="duration"/>
                    <field name="additional_charges"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 