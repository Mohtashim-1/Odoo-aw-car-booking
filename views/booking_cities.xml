<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Booking City -->
    <record id="view_booking_city_tree" model="ir.ui.view">
        <field name="name">booking.city.tree</field>
        <field name="model">booking.city</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="region"/>
            </list>
        </field>
    </record>

    <!-- Form View for Booking City -->
    <record id="view_booking_city_form" model="ir.ui.view">
        <field name="name">booking.city.form</field>
        <field name="model">booking.city</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="region"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Booking City -->
    <record id="action_booking_city" model="ir.actions.act_window">
        <field name="name">Cities</field>
        <field name="res_model">booking.city</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new city for car bookings.
            </p>
        </field>
    </record>

    <!-- Menu for Booking City -->
    <menuitem
        id="menu_booking_city"
        name="Cities"
        parent="car_booking.menu_car_booking_root"
        action="action_booking_city"

    />
</odoo>