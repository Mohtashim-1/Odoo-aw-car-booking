<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Company Form View to Add Report Images -->
        <record id="res_company_form_inherit_car_booking" model="ir.ui.view">
            <field name="name">res.company.form.inherit.car.booking</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Report Images" name="report_images">
                        <group>
                            <group string="Report Header Image">
                                <field name="image_field_1" widget="image" class="oe_avatar"/>
                                <field name="image_field_1" invisible="1"/>
                            </group>
                            <group string="Report Footer Image">
                                <field name="image_field_2" widget="image" class="oe_avatar"/>
                                <field name="image_field_2" invisible="1"/>
                            </group>
                        </group>
                        <group>
                            <group string="Image Information">
                                <p class="text-muted">
                                    <strong>Header Image:</strong> This image will be displayed in the header of car booking reports.
                                </p>
                                <p class="text-muted">
                                    <strong>Footer Image:</strong> This image will be displayed in the footer of car booking reports.
                                </p>
                                <p class="text-muted">
                                    <strong>Recommended Size:</strong> 800x200 pixels for header, 600x150 pixels for footer.
                                </p>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 