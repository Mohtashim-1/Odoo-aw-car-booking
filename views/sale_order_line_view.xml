<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Override Sale Order Form View to Add Car Booking Fields to Order Lines -->
        <record id="view_order_form_inherit_car_booking" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.car.booking</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Replace the entire order_line list view -->
                <xpath expr="//field[@name='order_line']" position="replace">
                    <field name="order_line" context="{'default_car_booking_line_id': car_booking_id}">
                        <list editable="bottom">
                            <field name="product_id"/>
                            <field name="service_type"/>
                            <field name="car_type"/>
                            <field name="duration"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="price_unit"/>
                            <field name="additional_charges"/>
                            <field name="discount"/>
                            <field name="tax_id" widget="many2many_tags"/>
                            <field name="price_subtotal"/>
                            <field name="price_tax"/>
                            <field name="price_total"/>
                        </list>
                    </field>
                </xpath>
            </field>
        </record>

        <!-- Force update the view by creating a new one with higher priority -->
        <record id="view_order_form_car_booking_override" model="ir.ui.view">
            <field name="name">sale.order.form.car.booking.override</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="view_order_form_inherit_car_booking"/>
            <field name="priority" eval="99"/>
            <field name="arch" type="xml">
                <!-- Force the order_line to use our custom list view -->
                <xpath expr="//field[@name='order_line']" position="replace">
                    <field name="order_line" context="{'default_car_booking_line_id': car_booking_id}">
                        <list editable="bottom">
                            <field name="product_id"/>
                            <field name="service_type"/>
                            <field name="car_type"/>
                            <field name="duration"/>
                            <field name="product_uom_qty"/>
                            <field name="product_uom"/>
                            <field name="price_unit"/>
                            <field name="additional_charges"/>
                            <field name="discount"/>
                            <field name="tax_id" widget="many2many_tags"/>
                            <field name="price_subtotal"/>
                            <field name="price_tax"/>
                            <field name="price_total"/>
                        </list>
                    </field>
                </xpath>
            </field>
        </record>

        <!-- Custom Sale Order Line List View for Car Booking -->
        <record id="view_sale_order_line_list_car_booking" model="ir.ui.view">
            <field name="name">sale.order.line.list.car.booking</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="product_id"/>
                    <field name="service_type"/>
                    <field name="car_type"/>
                    <field name="duration"/>
                    <field name="product_uom_qty"/>
                    <field name="product_uom"/>
                    <field name="price_unit"/>
                    <field name="additional_charges"/>
                    <field name="discount"/>
                    <field name="tax_id" widget="many2many_tags"/>
                    <field name="price_subtotal"/>
                    <field name="price_tax"/>
                    <field name="price_total"/>
                </list>
            </field>
        </record>

        <!-- Inherit Sale Order Line Tree View to Add Car Booking Fields -->
        <record id="view_sale_order_line_tree_inherit_car_booking" model="ir.ui.view">
            <field name="name">sale.order.line.tree.inherit.car.booking</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <!-- Show car booking fields after name -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="service_type"/>
                    <field name="car_type"/>
                </xpath>
                <!-- Show duration before quantity -->
                <xpath expr="//field[@name='product_uom_qty']" position="before">
                    <field name="duration"/>
                </xpath>
                <!-- Show additional charges after unit price (price_unit not in tree view, so after price_subtotal) -->
                <xpath expr="//field[@name='price_subtotal']" position="before">
                    <field name="additional_charges"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Sale Order Line Form View to Add Car Booking Fields -->
        <record id="view_sale_order_line_form_inherit_car_booking" model="ir.ui.view">
            <field name="name">sale.order.line.form.inherit.car.booking</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
            <field name="arch" type="xml">
                <!-- Show car booking fields after product_id -->
                <xpath expr="//field[@name='price_unit']" position="after">
                    <field name="car_booking_line_id"/>
                    <field name="service_type"/>
                    <field name="car_type"/>
                </xpath>
                <!-- Show duration before quantity -->
                <xpath expr="//field[@name='product_uom_qty']" position="before">
                    <field name="duration"/>
                </xpath>
                <!-- Show additional charges after unit price -->
                <xpath expr="//field[@name='price_unit']" position="after">
                    <field name="additional_charges"/>
                    <field name="discount"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 