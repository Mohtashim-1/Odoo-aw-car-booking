<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Sale Order Form View to Add Car Booking Fields to Order Lines -->
        <record id="view_order_form_inherit_car_booking" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.car.booking</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Hide packaging fields -->
                <xpath expr="//field[@name='order_line']//list//field[@name='product_packaging_id']" position="replace">
                    <field name="product_packaging_id" invisible="1" column_invisible="True"/>
                </xpath>
                <xpath expr="//field[@name='order_line']//list//field[@name='product_packaging_qty']" position="replace">
                    <field name="product_packaging_qty" invisible="1" column_invisible="True"/>
                </xpath>
                
                <!-- Show car booking fields after product_id -->
                <xpath expr="//field[@name='order_line']//list//field[@name='product_id']" position="after">
                    <field name="service_type" optional="show"/>
                    <field name="car_type" optional="show"/>
                </xpath>
                <!-- Show duration before quantity -->
                <xpath expr="//field[@name='order_line']//list//field[@name='product_uom_qty']" position="before">
                    <field name="duration" optional="show"/>
                </xpath>
                <!-- Show additional charges after unit price -->
                <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="after">
                    <field name="additional_charges" optional="show"/>
                    <field name="discount" optional="show"/>
                </xpath>
                <!-- Hide date fields -->
                <xpath expr="//field[@name='order_line']//list//field[@name='price_unit']" position="after">
                    <field name="date_start" invisible="1" column_invisible="True"/>
                    <field name="date_end" invisible="1" column_invisible="True"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Sale Order Line Tree View to Add Car Booking Fields -->
        <record id="view_sale_order_line_tree_inherit_car_booking" model="ir.ui.view">
            <field name="name">sale.order.line.tree.inherit.car.booking</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_order_line_tree"/>
            <field name="arch" type="xml">
                <!-- Show car booking fields after name -->
                <xpath expr="//field[@name='name']" position="after">
                    <field name="service_type" optional="show"/>
                    <field name="car_type" optional="show"/>
                </xpath>
                <!-- Show duration before quantity -->
                <xpath expr="//field[@name='product_uom_qty']" position="before">
                    <field name="duration" optional="show"/>
                </xpath>
                <!-- Show additional charges after unit price (price_unit not in tree view, so after price_subtotal) -->
                <xpath expr="//field[@name='price_subtotal']" position="before">
                    <field name="additional_charges" optional="show"/>
                </xpath>
                <!-- Hide date fields -->
                <xpath expr="//field[@name='price_subtotal']" position="after">
                    <field name="date_start" invisible="1" column_invisible="True"/>
                    <field name="date_end" invisible="1" column_invisible="True"/>
                </xpath>
            </field>
        </record>

        <!-- Inherit Sale Order Line Form View to Add Car Booking Fields -->
        <record id="view_sale_order_line_form_inherit_car_booking" model="ir.ui.view">
            <field name="name">sale.order.line.form.inherit.car.booking</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.sale_order_line_view_form_readonly"/>
            <field name="arch" type="xml">
                <!-- Show car booking fields after product_id -->
                <xpath expr="//field[@name='price_unit']" position="after">
                    <field name="car_booking_line_id"/>
                    <field name="service_type"/>
                    <field name="car_type"/>
                </xpath>
                <!-- Show duration before quantity -->
                <xpath expr="//field[@name='product_uom_qty']" position="before">
                    <field name="duration"/>
                </xpath>
                <!-- Show additional charges after unit price -->
                <xpath expr="//field[@name='price_unit']" position="after">
                    <field name="additional_charges"/>
                    <field name="discount"/>
                </xpath>
                <!-- Hide date fields -->
                <xpath expr="//field[@name='price_unit']" position="after">
                    <field name="date_start" invisible="1"/>
                    <field name="date_end" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 