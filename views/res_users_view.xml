<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Inherit User Form View to Add Car Booking Checkbox -->
        <record id="view_users_form_car_booking" model="ir.ui.view">
            <field name="name">res.users.form.car.booking</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='access_rights']" position="inside">
                    <group string="Car Booking" name="car_booking_settings">
                        <field name="show_car_booking" 
                               string="Show Car Booking Menu"
                               help="Check this box to show Car Booking menu to this user"/>
                    </group>
                </xpath>
            </field>
        </record>
        
    </data>
</odoo> 