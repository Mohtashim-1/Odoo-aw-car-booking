<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Partner Form View - Add Custom Fields -->
        <record id="view_partner_form_inherit_custom" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.custom</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="after">
                    <field name="customized_mobile" placeholder="Customized Mobile Number"/>
                    <field name="national_identity_number" placeholder="National Identity Number"/>
                    <field name="id_no" placeholder="Driver ID Number"/>
                </xpath>
            </field>
        </record>

        <!-- Partner Form View - Add Custom Fields Alternative -->
        <record id="view_partner_form_inherit_custom_alt" model="ir.ui.view">
            <field name="name">res.partner.form.inherit.custom.alt</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='website']" position="after">
                    <field name="customized_mobile" placeholder="Customized Mobile Number"/>
                    <field name="national_identity_number" placeholder="National Identity Number"/>
                    <field name="id_no" placeholder="Driver ID Number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 