<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Airport -->
    <record id="view_car_airport_tree" model="ir.ui.view">
        <field name="name">car.airport.tree</field>
        <field name="model">car.airport</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View for Airport -->
    <record id="view_car_airport_form" model="ir.ui.view">
        <field name="name">car.airport.form</field>
        <field name="model">car.airport</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Airport -->
    <record id="action_car_airport" model="ir.actions.act_window">
        <field name="name">Airports</field>
        <field name="res_model">car.airport</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new airport for car bookings.
            </p>
        </field>
    </record>

    <!-- Menu for Airport -->
    <menuitem
        id="menu_car_airport"
        name="Airports"
        parent="car_booking.menu_car_booking_root"
        action="action_car_airport"

    />
</odoo>