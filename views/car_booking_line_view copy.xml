    <!-- Purchase order line action  -->
    <record id="action_car_booking_line_view"
            model="ir.actions.act_window">
        <field name="name">Purchase Order line</field>
        <field name="res_model">car.booking.line</field>
        <field name="view_mode">list,form,kanban,pivot,graph</field>
        <field name="domain">
            [('state','=','purchase')]
        </field>
        <field name="view_ids" eval="[(5, 0, 0),
                    (0, 0, {'view_mode': 'list', 'view_id': ref('car_booking_line_tree_view')}),
                    (0, 0, {'view_mode': 'kanban', 'view_id': ref('car_booking_line_kanban_view')}),
                    (0, 0, {'view_mode': 'pivot', 'view_id': ref('car_booking_line_pivot_view_pivot')}),
                    (0, 0, {'view_mode': 'graph', 'view_id': ref('car_booking_line_graph_view')}),
                    (0, 0, {'view_mode': 'calendar', 'view_id': ref('bill_line_calender_view')}),
                    (0, 0, {'view_mode': 'form', 'view_id': ref('car_booking_line_form_view')}),]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Purchase Order Line Views
            </p>
        </field>
    </record>

    <!-- Menu for the purchase order line -->
    <menuitem id="menu_car_booking_line_view" name="Booking Line Dashboard"
              sequence="300"
              parent="purchase.menu_procurement_management"
              action="action_car_booking_line_view">
    </menuitem>
