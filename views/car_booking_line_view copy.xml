    <!-- Car Booking line tree view-->
    <record id="car_booking_line_tree_view" model="ir.ui.view">
        <field name="name">car.booking.line.tree view</field>
        <field name="model">car.booking.line</field>
        <field name="arch" type="xml">
            <list>
                <field name="order_id"/>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="name"/>
                <field name="date_order"/>
                <field name="date_planned" optional="hide"/>
                <field name="product_qty"/>
                <field name="price_unit"/>
                <field name="product_uom" optional="hide"/>
                <field name="price_subtotal"/>
                <field name="taxes_id" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'purchase' or state == 'done'"/>
            </list>
        </field>
    </record>

    <!-- Purchase order line form view-->
    <record id="car_booking_line_form_view" model="ir.ui.view">
        <field name="name">car.booking.line.form.view</field>
        <field name="model">car.booking.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_image" widget="image"
                               class="oe_avatar" string=""/>
                    </group>
                    <group>
                        <group>
                            <field name="order_id" string="Order"/>
                            <field name="product_id"/>
                            <field name="product_uom"/>
                            <field name="product_qty"
                                   string="Ordered Qty"/>
                            <field name="taxes_id"
                                   widget="many2many_tags"/>
                            <field name="price_subtotal"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="name"/>
                            <field name="price_unit"/>
                            <field name="date_planned"
                                   string="Delivery Date"/>
                            <field name="product_uom_category_id"
                                   string="Category"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   

