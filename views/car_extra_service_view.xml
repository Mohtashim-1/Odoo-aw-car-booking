<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View for Car Extra Service -->
    <record id="view_car_extra_service_tree" model="ir.ui.view">
        <field name="name">car.extra.service.tree</field>
        <field name="model">car.extra.service</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Form View for Car Extra Service -->
    <record id="view_car_extra_service_form" model="ir.ui.view">
        <field name="name">car.extra.service.form</field>
        <field name="model">car.extra.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                    <group>
                        
                    </group>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Car Extra Service -->
    <record id="action_car_extra_service" model="ir.actions.act_window">
        <field name="name">Extra Services</field>
        <field name="res_model">car.extra.service</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new extra service for car bookings.
            </p>
        </field>
    </record>

    <!-- Menu for Car Extra Service -->
    <menuitem
        id="menu_car_extra_service"
        name="Extra Services"
        parent="aw_car_booking.menu_car_booking_root"
        action="action_car_extra_service"

    />
</odoo>